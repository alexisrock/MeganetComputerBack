{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug con ts-node-dev",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "runtimeArgs": [
        "--respawn",
        "--inspect=4321"
      ],
      "args": [
        "${workspaceFolder}/index.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}"
    }
  ]
}